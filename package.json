  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "tsc -w & npx tailwindcss -i ./src/client/styles.css -o ./dist/client/styles.css --watch",
    "dev": "nodemon dist/tempServer.js & nodemon dist/client/server.js",
    "dev:server": "nodemon dist/tempServer.js",
    "dev:client": "nodemon dist/client/server.js",
    "start": "node dist/tempServer.js & node dist/client/server.js",
    "start:server": "node dist/tempServer.js",
    "start:client": "node dist/client/server.js",
    "build": "tsc -p ./tsconfig.json && npx tailwindcss -i ./src/client/public/styles.css -o ./dist/client/public/styles.css && cp ./src/client/public/index.html ./dist/client/public/index.html",
    "docker-build": "tsc -p /usr/src/app/tsconfig.json && npx tailwindcss -i /usr/src/app/src/client/public/styles.css -o /usr/src/app/dist/client/public/styles.css && cp /usr/src/app/src/client/public/index.html /usr/src/app/dist/client/public/index.html"
  },
